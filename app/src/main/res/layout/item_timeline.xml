<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <com.repsly.library.timelineview.TimelineView
        android:id="@+id/timeline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:lineColor="@color/colorPrimaryDark"
        app:lineOrientation="vertical"
        app:lineSize="4dp"
        app:markerActive="false"
        app:markerActiveColor="@color/red"
        app:markerActiveStrokeWidth="8dp"
        app:markerColor="@color/colorPrimaryDark"
        app:markerSize="20dp"
        app:markerStrokeWidth="2dp"
        app:markerTextSize="10sp"/>


    <androidx.cardview.widget.CardView
        android:layout_marginEnd="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TvJamPenerima"
                android:gravity="start|center"
                android:text="18:90:9012"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"/>
            <View
                android:id="@+id/viewDivider"
                android:layout_marginStart="-10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <TextView
                android:id="@+id/TvPesanBarang"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="start|center"
                android:text="Barang Sampai Di jakarta " />

            <TextView
                android:id="@+id/TvNamaPenerimaTimeLine"
                android:gravity="start|center"
                android:text="Nama Penerima"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:visibility="gone"
                tools:visibility="visible"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    </LinearLayout>
