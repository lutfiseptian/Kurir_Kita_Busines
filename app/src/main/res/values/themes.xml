
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/ButtonPrimary</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
    </style>

    <style name="Theme.AppCompatnes" parent="Theme.AppCompat.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/ButtonPrimary</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
    </style>



    <style name="NoActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="Fullscreen" parent="ShapeAppearanceOverlay.MaterialComponents.MaterialCalendar.Window.Fullscreen">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/ButtonPrimary</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">#00000000</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="Dialog" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/ButtonPrimary</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="cornerRadius">@dimen/_6sdp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
    </style>

    <style name="ButtonSecondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">false</item>
        <item name="android:minHeight">@dimen/_40sdp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="cornerRadius">@dimen/_6sdp</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="strokeColor">@color/grey</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
    </style>

    <style name="ButtonSecondary2" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">false</item>
        <item name="android:minHeight">@dimen/_40sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="cornerRadius">@dimen/_6sdp</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="strokeColor">@color/grey</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
    </style>










    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="TemperatureTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PlaceTextView">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ClockTextView">
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DescriptionTextView">
        <item name="android:textSize">15sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MyDatePicker" parent="android:Widget.Material.Light.DatePicker" tools:targetApi="lollipop">
        <item name="android:datePickerMode">spinner</item>
    </style>
        <style name="CustomTabStyle" parent = "TextAppearance.Design.Tab">
            <item name="android:textSize">10sp</item>
        </style>


</resources>

